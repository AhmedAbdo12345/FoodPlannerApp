<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
tools:context=".view.fragments.ChoicePlanFragment">

    <Button
        android:id="@+id/btn_AddNewPlann"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button_background"
        android:text="Add Plan"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

<!--<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/planRecycleView"
    android:layout_width="match_parent"
    android:layout_height="550dp"
    tools:listitem="@layout/rv_day_cardview"
    android:layout_marginTop="25dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />-->
    <RadioGroup
        android:id="@+id/radioGroupDays"
        android:layout_width="408dp"
        android:layout_height="422dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_AddNewPlann"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioButton_SaturDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:gravity="left"
            android:layoutDirection="rtl"
            android:text="SaturDay"
            android:textColor="#7868e5"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radioButton_Sunday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:gravity="left"
            android:layoutDirection="rtl"
            android:text="Sunday"
            android:textColor="#7868e5"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radioButton_MonDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:gravity="left"
            android:layoutDirection="rtl"
            android:text="MonDay"
            android:textColor="#7868e5"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radioButton_TuesDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:gravity="left"
            android:layoutDirection="rtl"
            android:text="TuesDay"
            android:textColor="#7868e5"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radioButton_WednesDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:gravity="left"
            android:layoutDirection="rtl"
            android:text="WednesDay"
            android:textColor="#7868e5"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radioButton_ThursDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:gravity="left"
            android:layoutDirection="rtl"
            android:text="ThursDay"
            android:textColor="#7868e5"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radioButton_FriDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:gravity="left"
            android:layoutDirection="rtl"
            android:text="FriDay"
            android:textColor="#7868e5"
            android:textSize="16sp" />

    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>